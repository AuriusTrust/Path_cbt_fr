<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="@string/sheet_skills_filters_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:text="@string/sheet_skills_filter_class" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/skills_filter_class_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sheet_skills_filter_class_all"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/skills_filter_class_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sheet_skills_filter_class_only" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:text="@string/sheet_skills_filter_rank" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/skills_filter_rank_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sheet_skills_filter_rank_all"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/skills_filter_rank_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sheet_skills_filter_rank_only" />
        </RadioGroup>
    </LinearLayout>

